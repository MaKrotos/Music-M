<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="VK_UI3.Controls.Blocks.TextsBlockControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:VK_UI3.Controls.Blocks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
        AutomationProperties.Name="Блок текста">

    <UserControl.Shadow>
        <ThemeShadow />
    </UserControl.Shadow>
    <Grid
        Padding="10"
        Background="{ThemeResource LayerOnAccentAcrylicFillColorDefaultBrush}"
        CornerRadius="8"
        Translation="0,0,8">


        <TextBlock
            x:Name="Title"
            Opacity="0.8"
            TextWrapping="Wrap"
            AutomationProperties.Name="Заголовок текста" />
    </Grid>
</UserControl>
