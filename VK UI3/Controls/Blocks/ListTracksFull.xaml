<UserControl
    x:Class="VK_UI3.Controls.Blocks.ListTracksFull"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="using:VK_UI3.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:VK_UI3.Controls.Blocks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="-16,0,-16,0"
    mc:Ignorable="d">
    <UserControl.Resources />
    <UserControl.Shadow>
        <ThemeShadow />
    </UserControl.Shadow>
    <ListView
        x:Name="TrackListView"
        Padding="0,0,0,0"
        CanReorderItems="false"
        IsItemClickEnabled="False"
        ItemsSource="{x:Bind sectionAudio.listAudio, Mode=OneWay}"
        SelectionMode="None"
        AutomationProperties.Name="Полный список треков">
        <ListView.ItemTemplate>
            <DataTemplate>
                <custom:TrackControl
                    Margin="0,0,0,8"
                    FocusVisualPrimaryBrush="Transparent"
                    FocusVisualSecondaryThickness="0" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
