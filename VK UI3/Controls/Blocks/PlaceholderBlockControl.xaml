<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="VK_UI3.Controls.Blocks.PlaceholderBlockControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:VK_UI3.Controls.Blocks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
        AutomationProperties.Name="Блок заполнителя">
    <UserControl.Shadow>
        <ThemeShadow />
    </UserControl.Shadow>
    <Grid
        Padding="10"
        Background="{ThemeResource LayerOnAccentAcrylicFillColorDefaultBrush}"
        CornerRadius="8"
        Translation="0,0,8">


        <StackPanel
            Margin="10,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Image
                x:Name="icon"
                Width="110"
                Height="110"
                AutomationProperties.Name="Иконка заполнителя" />
            <TextBlock x:Name="Title" FontSize="20" AutomationProperties.Name="Заголовок заполнителя" />
            <TextBlock
                x:Name="Text"
                Margin="0,10,0,0"
                FontSize="14"
                Opacity="0.8"
                AutomationProperties.Name="Текст заполнителя" />
            <Button
                x:Name="ActionButton"
                Width="300"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Click="ActionButton_Click"
                AutomationProperties.Name="Кнопка действия заполнителя" />
        </StackPanel>
    </Grid>
</UserControl>
