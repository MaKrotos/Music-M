<UserControl
    x:Class="VK_UI3.Controls.Blocks.MixControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VK_UI3.Controls.Blocks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="300"
    xmlns:palks="using:VK_UI3.Helpers.Animations"
    Background="Transparent"
    mc:Ignorable="d">
  



    <Grid >
        
        <Grid x:Name="columns" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0">
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="columns"
                                     Storyboard.TargetProperty="Opacity"
                                     To="1.0" Duration="0:0:2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <palks:Palka Seconds="0.25" Min="0.2" Max="1.3" Grid.Column="0" Margin="20" CornerRadius="25"  Width="50" Height="200" Background="Red">
            </palks:Palka>
            <palks:Palka Seconds="0.25" Min="0.2" Max="1.3" Grid.Column="1" Margin="20" CornerRadius="25"  Width="50" Height="200" Background="Blue" >
            </palks:Palka>
            <palks:Palka Seconds="0.25" Min="0.2" Max="1.3" Grid.Column="2" Margin="20" CornerRadius="25"  Width="50" Height="200" Background="Green" >
            </palks:Palka>
            <palks:Palka Seconds="0.25" Min="0.2" Max="1.3" Grid.Column="3" Margin="20" CornerRadius="25"  Width="50" Height="200" Background="Yellow" >
            </palks:Palka>
        </Grid>

        <Grid Opacity="0.994" Background="{StaticResource SystemControlChromeMediumLowAcrylicElementMediumBrush}"  CornerRadius="10" >
            
        </Grid>

    </Grid>
</UserControl>