<UserControl
    x:Class="VK_UI3.Controls.Blocks.MixControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:VK_UI3.Controls.Blocks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:palks="using:VK_UI3.Helpers.Animations"
    Height="300"
    Background="Transparent"
    mc:Ignorable="d">




    <Grid>

        <Grid
            x:Name="columns"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Opacity="0">
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="columns"
                                Storyboard.TargetProperty="Opacity"
                                To="1.0"
                                Duration="0:0:2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <palks:Palka
                Grid.Column="0"
                Width="50"
                Height="200"
                Margin="20"
                Background="Red"
                CornerRadius="25"
                Max="1.3"
                Min="0.2"
                Seconds="0.25" />
            <palks:Palka
                Grid.Column="1"
                Width="50"
                Height="200"
                Margin="20"
                Background="Blue"
                CornerRadius="25"
                Max="1.3"
                Min="0.2"
                Seconds="0.25" />
            <palks:Palka
                Grid.Column="2"
                Width="50"
                Height="200"
                Margin="20"
                Background="Green"
                CornerRadius="25"
                Max="1.3"
                Min="0.2"
                Seconds="0.25" />
            <palks:Palka
                Grid.Column="3"
                Width="50"
                Height="200"
                Margin="20"
                Background="Yellow"
                CornerRadius="25"
                Max="1.3"
                Min="0.2"
                Seconds="0.25" />
        </Grid>

        <Grid
            Background="{StaticResource SystemControlChromeMediumLowAcrylicElementMediumBrush}"
            CornerRadius="10"
            Opacity="0.994" />

    </Grid>
</UserControl>