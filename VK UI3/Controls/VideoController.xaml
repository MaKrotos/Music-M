<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="VK_UI3.Controls.VideoController"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="using:VK_UI3.Helpers.Animations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:VK_UI3.Controls"
    xmlns:localq="using:VK_UI3.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="300"
    Height="230"
    Margin="0,0,0,0"
    CornerRadius="8"
    Translation="0,0,8"
    mc:Ignorable="d">
    <UserControl.RenderTransform>
        <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1" />
    </UserControl.RenderTransform>
    <UserControl.RenderTransformOrigin>
        0.5,0.5
    </UserControl.RenderTransformOrigin>
    <UserControl.Shadow>
        <ThemeShadow />
    </UserControl.Shadow>
    <StackPanel
        Margin="0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="{ThemeResource LayerOnAccentAcrylicFillColorDefault}"
        CornerRadius="8"
        PointerEntered="Grid_PointerEntered"
        PointerExited="Grid_PointerExited"
        PointerPressed="Grid_PointerPressed">


        <Grid
            x:Name="GridVideo"
            Width="300"
            Height="168.5"
            Margin="0"
            Background="{ThemeResource LayerOnAccentAcrylicFillColorDefaultBrush}"
            CornerRadius="4">


           

            <Grid x:Name="ShowVidGid">
                <FontIcon
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Glyph="&#xE714;" AutomationProperties.Name="Иконка видео" />
                <Image
                    x:Name="imageVideo"
                    Width="300"
                    Height="300"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Stretch="Uniform" AutomationProperties.Name="Обложка видео" />
                <Grid
                    x:Name="btnGrid"
                    Width="55"
                    Height="55"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{ThemeResource SystemControlBackgroundAltMediumHighBrush}"
                    CornerRadius="100"
                    Opacity="0">
                    <FontIcon
                        x:Name="PlayPause"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Glyph="&#xF5B0;" AutomationProperties.Name="Воспроизвести видео" />
                </Grid>

            </Grid>


        </Grid>


        <StackPanel Margin="10,5,10,10">
            <TextBlock
                x:Name="MainText"
                MaxWidth="300"
                MaxHeight="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                MaxLines="1"
                Text="Название"
                TextTrimming="CharacterEllipsis"
                TextWrapping="WrapWholeWords" AutomationProperties.Name="Название видео" />
            <TextBlock
                x:Name="SecondText"
                Grid.Column="0"
                MaxWidth="300"
                MaxHeight="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                FontSize="11"
                MaxLines="1"
                Opacity="0.7"
                Text="Автор"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap"
                Visibility="Visible" AutomationProperties.Name="Автор видео" />
            <TextBlock
                x:Name="GenreText"
                Grid.Column="0"
                MaxWidth="300"
                MaxHeight="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                FontSize="11"
                MaxLines="1"
                Opacity="0.7"
                Text="Жанр, 2023"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" AutomationProperties.Name="Жанр и год видео" />
        </StackPanel>


        <StackPanel.Resources>
            <Storyboard x:Name="ShowAnimation">
                <DoubleAnimation
                    Storyboard.TargetName="scaleTransform"
                    Storyboard.TargetProperty="ScaleX"
                    To="0.975"
                    Duration="0:0:0.15">
                    <DoubleAnimation.EasingFunction>
                        <ExponentialEase EasingMode="EaseOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation
                    Storyboard.TargetName="scaleTransform"
                    Storyboard.TargetProperty="ScaleY"
                    To="0.975"
                    Duration="0:0:0.15">
                    <DoubleAnimation.EasingFunction>
                        <ExponentialEase EasingMode="EaseOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>


            <Storyboard x:Name="HideAnimation">
                <DoubleAnimation
                    Storyboard.TargetName="scaleTransform"
                    Storyboard.TargetProperty="ScaleX"
                    To="1"
                    Duration="0:0:0.15">
                    <DoubleAnimation.EasingFunction>
                        <ExponentialEase EasingMode="EaseIn" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation
                    Storyboard.TargetName="scaleTransform"
                    Storyboard.TargetProperty="ScaleY"
                    To="1"
                    Duration="0:0:0.15">
                    <DoubleAnimation.EasingFunction>
                        <ExponentialEase EasingMode="EaseIn" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>


            <Storyboard x:Name="ShowAnimationMediaP">
                <DoubleAnimation
                    Storyboard.TargetName="ShowVidGid"
                    Storyboard.TargetProperty="Opacity"
                    To="0"
                    Duration="0:0:0.25">
                    <DoubleAnimation.EasingFunction>
                        <ExponentialEase EasingMode="EaseIn" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Name="HideAnimationMediaP">
                <DoubleAnimation
                    Storyboard.TargetName="ShowVidGid"
                    Storyboard.TargetProperty="Opacity"
                    To="1"
                    Duration="0:0:0.25">
                    <DoubleAnimation.EasingFunction>
                        <ExponentialEase EasingMode="EaseIn" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>


            <!--  Анимация прозрачности от 0 до 1  -->
            <Storyboard x:Name="FadeInAnimationGridPlayIcon">
                <DoubleAnimation
                    Storyboard.TargetName="btnGrid"
                    Storyboard.TargetProperty="Opacity"
                    To="1"
                    Duration="0:0:0.25" />
            </Storyboard>
            <!--  Анимация прозрачности от 1 до 0  -->
            <Storyboard x:Name="FadeOutAnimationGridPlayIcon">
                <DoubleAnimation
                    Storyboard.TargetName="btnGrid"
                    Storyboard.TargetProperty="Opacity"
                    To="0"
                    Duration="0:0:0.25" />
            </Storyboard>


        </StackPanel.Resources>



    </StackPanel>
</UserControl>
