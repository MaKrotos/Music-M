<?xml version="1.0" encoding="utf-8" ?>
<MenuFlyout
	x:Class="VK_UI3.Controls.AudioControlFlyOut"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:VK_UI3"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">


	<MenuFlyoutItem
		AutomationProperties.Name="Добавить выбранное в профиль"
		Click="AddRemoveMass_Click"
		x:Name="AddRemoveMass"
		Icon="Add"
		Text="Добавить выбранное в профиль"
		Visibility="Visible" />

	<MenuFlyoutItem
		AutomationProperties.Name="Удалить выбранное из профиля"
		Click="DelRemoveMass_Click"
		x:Name="DelRemoveMass"
		Icon="Delete"
		Text="Удалить выбранное из профиля"
		Visibility="Collapsed" />

	<MenuFlyoutItem
		AutomationProperties.Name="Удалить выбранное из плейлиста"
		x:Name="RemovePlayListMass"
		Icon="Delete"
		Click="RemovePlayListMass_Click"
		Text="Удалить выбранное из плейлиста"
		Visibility="Visible" />

	<MenuFlyoutSubItem
		AutomationProperties.Name="Добавить выбранное в плейлист"
		x:Name="AddPlayListMass"
		Icon="Add"
		Text="Добавить выбранное в плейлист">
		<MenuFlyoutItem
			AutomationProperties.Name="Показать больше"
			x:Name="addToPlayListMoreMass"
			Click="addToPlayListMoreMass_Click"
			Text="Показать больше">
			<MenuFlyoutItem.Icon>
				<FontIcon Glyph="&#xE93C;" />
			</MenuFlyoutItem.Icon>
		</MenuFlyoutItem>
		<MenuFlyoutItem
			AutomationProperties.Name="Создать"
			x:Name="CreatePlayListBTNMass"
			Click="CreatePlayListBTNMass_Click"
			Text="Создать">
			<MenuFlyoutItem.Icon>
				<FontIcon Glyph="&#xECC8;" />
			</MenuFlyoutItem.Icon>
		</MenuFlyoutItem>
	</MenuFlyoutSubItem>

	<MenuFlyoutSubItem
		AutomationProperties.Name="Скачать выбранное"
		x:Name="DownloadFlyOutMass"
		Icon="Download"
		Text="Скачать выбранное">
		<MenuFlyoutItem
			AutomationProperties.Name="Выбрать папку"
			x:Name="PickFolderDownloadMass"
			Click="PickFolderDownloadMass_Click"
			Text="Выбрать папку">
			<MenuFlyoutItem.Icon>
				<FontIcon Glyph="&#xF12B;" />
			</MenuFlyoutItem.Icon>
		</MenuFlyoutItem>
	</MenuFlyoutSubItem>

	<MenuFlyoutSeparator x:Name="FirstSeparator" Visibility="Visible" />

	<MenuFlyoutItem
		AutomationProperties.Name="Снять выделение"
		x:Name="DeselectAllBtn"
		Click="DeselectAllBtn_Click"
		Text="Снять выделение"
		Visibility="Visible">
		<MenuFlyoutItem.Icon>
			<FontIcon Glyph="&#xED62;" />
		</MenuFlyoutItem.Icon>
	</MenuFlyoutItem>

	<MenuFlyoutSeparator x:Name="SecondSeparator" Visibility="Visible" />


	<MenuFlyoutItem
		AutomationProperties.Name="Редактировать"
		x:Name="EditTrack"
		Click="EditTrack_Click"
		Icon="Edit"
		Text="Редактировать"
		Visibility="Collapsed" />
	<MenuFlyoutItem
		AutomationProperties.Name="Добавить к себе"
		x:Name="AddRemove"
		Click="AddRemove_Click"
		Icon="Add"
		Text="Добавить к себе" />
	<MenuFlyoutItem
		AutomationProperties.Name="Удалить из плейлиста"
		x:Name="RemovePlayList"
		Click="RemovePlayList_Click"
		Icon="Delete"
		Text="Удалить из плейлиста"
		Visibility="Collapsed" />
	<MenuFlyoutItem
		AutomationProperties.Name="Показать похожие"
		x:Name="ShowAsse"
		Click="ShowAsse_Click"
		Text="Показать похожие"
		Visibility="Visible">
		<MenuFlyoutItem.Icon>
			<FontIcon Glyph="&#xE7B3;" />
		</MenuFlyoutItem.Icon>
	</MenuFlyoutItem>
	<MenuFlyoutSubItem
		AutomationProperties.Name="Перейти к исполнителю"
		x:Name="GoArtist"
		Icon="ContactInfo"
		Text="Перейти к исполнителю" />
	<MenuFlyoutItem
		AutomationProperties.Name="Перейти в альбом"
		x:Name="FlyGoAlbum"
		Click="GoToAlbum"
		Text="Перейти в альбом">
		<MenuFlyoutItem.Icon>
			<FontIcon Glyph="&#xE93C;" />
		</MenuFlyoutItem.Icon>
	</MenuFlyoutItem>
	<MenuFlyoutSubItem
		AutomationProperties.Name="Добавить в плейлист"
		x:Name="AddPlayList"
		Icon="Add"
		Text="Добавить в плейлист">
		<MenuFlyoutItem
			AutomationProperties.Name="Показать больше"
			x:Name="addToPlayListMore"
			Click="addToPlayListMore_Click"
			Text="Показать больше">
			<MenuFlyoutItem.Icon>
				<FontIcon Glyph="&#xE93C;" />
			</MenuFlyoutItem.Icon>
		</MenuFlyoutItem>
		<MenuFlyoutItem
			AutomationProperties.Name="Создать"
			x:Name="CreatePlayListBTN"
			Click="CreatePlayListBTN_Click"
			Text="Создать">
			<MenuFlyoutItem.Icon>
				<FontIcon Glyph="&#xECC8;" />
			</MenuFlyoutItem.Icon>
		</MenuFlyoutItem>
	</MenuFlyoutSubItem>
	<MenuFlyoutItem
		AutomationProperties.Name="Не нравится"
		x:Name="disText"
		Click="DislikeClick"
		Text="Не нравится">
		<MenuFlyoutItem.Icon>
			<PathIcon x:Name="IconDis" />
		</MenuFlyoutItem.Icon>
	</MenuFlyoutItem>
	<MenuFlyoutItem
		AutomationProperties.Name="Пропускать треки исполнителя"
		x:Name="AddArtistIgnore"
		Click="AddArtistIgnore_Click"
		Icon="BlockContact"
		Text="Пропускать треки исполнителя" />
	<MenuFlyoutSubItem
		AutomationProperties.Name="Скачать"
		x:Name="DownloadFlyOut"
		Icon="Download"
		Text="Скачать">

		<MenuFlyoutItem
			AutomationProperties.Name="Выбрать папку"
			x:Name="PickFolderDownload"
			Click="PickFolderDownload_Click"
			Text="Выбрать папку">
			<MenuFlyoutItem.Icon>
				<FontIcon Glyph="&#xF12B;" />
			</MenuFlyoutItem.Icon>
		</MenuFlyoutItem>
	</MenuFlyoutSubItem>

	<MenuFlyoutItem
		AutomationProperties.Name="Скопировать ссылку"
		Click="CopyLink"
		Icon="Link"
		Text="Скопировать ссылку" />

	<MenuFlyoutSubItem Icon="Share" Text="Отправить">
		<MenuFlyoutItem
			AutomationProperties.Name="Список друзей"
			x:Name="ShareFriendsList"
			Click="ShareFriendsList_Click"
			Text="Список друзей">
			<MenuFlyoutItem.Icon>
				<FontIcon Glyph="&#xE902;" />
			</MenuFlyoutItem.Icon>
		</MenuFlyoutItem>
		<MenuFlyoutItem
			AutomationProperties.Name="Список диалогов"
			x:Name="ShareDialogsList"
			Click="ShareDialogsList_Click"
			Text="Список диалогов">
			<MenuFlyoutItem.Icon>
				<FontIcon Glyph="&#xE8F2;" />
			</MenuFlyoutItem.Icon>
		</MenuFlyoutItem>
	</MenuFlyoutSubItem>

	<MenuFlyoutSubItem
		AutomationProperties.Name="Создать пост"
		x:Name="CreatePostItem"
		Icon="Attach"
		Text="Создать пост" />

</MenuFlyout>
