            </Style>
        </StackPanel.Resources>
        <Border>
            <local:StartUpSetting></local:StartUpSetting>
        </Border>

        <Border>
            <local:BackDropSetting></local:BackDropSetting>
        </Border>
        <Border>
            <local:DownloadAllSetting></local:DownloadAllSetting>
        </Border>



        <TextBlock TextAlignment="Center"  Margin="0,20,0,0">
