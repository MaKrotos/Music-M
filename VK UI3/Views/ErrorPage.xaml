<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="VK_UI3.Views.ErrorPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:VK_UI3.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid AutomationProperties.Name="Страница ошибки" AutomationProperties.HelpText="Отображает информацию об ошибке в приложении">
		<StackPanel
			MaxWidth="600"
			Margin="20"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Spacing="20">

			<!--  Иконка ошибки  -->
			<FontIcon
				HorizontalAlignment="Center"
				FontSize="64"
				Foreground="{StaticResource SystemErrorTextColor}"
				Glyph="&#xE783;"
				AutomationProperties.Name="Иконка ошибки"
				AutomationProperties.HelpText="Визуальное представление ошибки" />

			<!--  Заголовок ошибки  -->
			<TextBlock
				HorizontalAlignment="Center"
				FontSize="24"
				FontWeight="Bold"
				Foreground="{ThemeResource TextFillColorPrimaryBrush}"
				Text="Произошла ошибка"
				TextAlignment="Center"
				AutomationProperties.HeadingLevel="Level1"
				AutomationProperties.Name="Заголовок ошибки"
				AutomationProperties.HelpText="Уведомление о возникновении ошибки в приложении" />

			<!--  Детальное описание ошибки  -->
			<Border
				Padding="15"
				Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
				BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
				BorderThickness="1"
				CornerRadius="8"
				AutomationProperties.Name="Область деталей ошибки"
				AutomationProperties.HelpText="Подробное описание возникшей ошибки">

				<ScrollViewer
					MaxHeight="400"
					HorizontalScrollMode="Auto"
					VerticalScrollMode="Auto"
					AutomationProperties.Name="Прокручиваемая область деталей ошибки">
					<TextBlock
						x:Name="ErrorDetailsText"
						FontFamily="Cascadia Code, Consolas, Courier New"
						FontSize="14"
						Foreground="{ThemeResource TextFillColorPrimaryBrush}"
						Text="hello"
						TextWrapping="Wrap"
						AutomationProperties.Name="Текст деталей ошибки"
						AutomationProperties.HelpText="Подробное описание ошибки для диагностики" />
				</ScrollViewer>
			</Border>

			<!--  Кнопки действий  -->
			<StackPanel
				HorizontalAlignment="Center"
				Orientation="Horizontal"
				Spacing="10"
				AutomationProperties.Name="Панель управления ошибкой"
				AutomationProperties.HelpText="Кнопки для управления ошибкой">
				<Button
					x:Name="RetryButton"
					Click="RetryButton_Click"
					Content="Повторить"
					Style="{StaticResource AccentButtonStyle}"
					AutomationProperties.Name="Повторить попытку"
					AutomationProperties.HelpText="Попытаться выполнить операцию заново" />

				<Button
					x:Name="CopyErrorButton"
					Click="CopyErrorButton_Click"
					Content="Копировать ошибку"
					Style="{StaticResource DefaultButtonStyle}"
					AutomationProperties.Name="Копировать текст ошибки"
					AutomationProperties.HelpText="Скопировать текст ошибки в буфер обмена" />
			</StackPanel>
		</StackPanel>
	</Grid>
</Page>