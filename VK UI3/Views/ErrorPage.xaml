<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="VK_UI3.Views.ErrorPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:VK_UI3.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	mc:Ignorable="d">

	<Grid>
		<StackPanel
			MaxWidth="600"
			Margin="20"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Spacing="20">

			<!--  Иконка ошибки  -->
			<FontIcon
				HorizontalAlignment="Center"
				FontSize="64"
				Foreground="{StaticResource SystemErrorTextColor}"
				Glyph="&#xE783;" />

			<!--  Заголовок ошибки  -->
			<TextBlock
				HorizontalAlignment="Center"
				FontSize="24"
				FontWeight="Bold"
				Foreground="{ThemeResource TextFillColorPrimaryBrush}"
				Text="Произошла ошибка"
				TextAlignment="Center" />

			<!--  Детальное описание ошибки  -->
			<Border
				Padding="15"
				Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
				BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
				BorderThickness="1"
				CornerRadius="8">

				<ScrollViewer
					MaxHeight="400"
					HorizontalScrollMode="Auto"
					VerticalScrollMode="Auto">
					<TextBlock
						x:Name="ErrorDetailsText"
						FontFamily="Cascadia Code, Consolas, Courier New"
						FontSize="14"
						Foreground="{ThemeResource TextFillColorPrimaryBrush}"
						Text="hello"
						TextWrapping="Wrap" />

				</ScrollViewer>
			</Border>

			<!--  Кнопки действий  -->
			<StackPanel
				HorizontalAlignment="Center"
				Orientation="Horizontal"
				Spacing="10">
				<Button
					x:Name="RetryButton"
					Click="RetryButton_Click"
					Content="Повторить"
					Style="{StaticResource AccentButtonStyle}" />

				<Button
					x:Name="CopyErrorButton"
					Click="CopyErrorButton_Click"
					Content="Копировать ошибку"
					Style="{StaticResource DefaultButtonStyle}" />
			</StackPanel>
		</StackPanel>
	</Grid>
</Page>