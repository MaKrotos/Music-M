<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="VK_UI3.Views.ModalsPages.SettingMix"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:VK_UI3.Views.ModalsPages"
    xmlns:localsed="using:VK_UI3.Views.ModalsPages.MixControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d"
    AutomationProperties.Name="Настройки микса"
    AutomationProperties.HelpText="Страница настройки параметров микса">
    <UserControl.Resources>
        <DataTemplate x:Key="PicturedButtonTemplate">
            <localsed:PicturedControl />
        </DataTemplate>
        <DataTemplate x:Key="ButtonTemplate">
            <localsed:BTNSControl />
        </DataTemplate>
        <local:MyTemplateSelector
            x:Key="MyTemplateSelector"
            PicturedButtonTemplate="{StaticResource PicturedButtonTemplate}"
            SimpleButtonTemplate="{StaticResource ButtonTemplate}" />
    </UserControl.Resources>


    <StackPanel
        Margin="10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">

        <TextBlock
            Margin="20"
            HorizontalAlignment="Center"
            FontFamily="{StaticResource VKSansDemiBold}"
            FontSize="28"
            Opacity="1"
            Text="{x:Bind Title}" />

        <TextBlock
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            FontFamily="{StaticResource VKSansRegular}"
            FontSize="15"
            Opacity="0.8"
            Text="{x:Bind Subtitle}" />


        <ListView
            Padding="0"
            
            ItemTemplateSelector="{StaticResource MyTemplateSelector}"
            ItemsSource="{x:Bind mixCategories}"
            SelectionMode="None"
            AutomationProperties.Name="Список категорий настроек микса"
            AutomationProperties.HelpText="Отображает доступные категории настроек для микса">
   
        </ListView>



        <Grid Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="1"
                Margin="5,0,0,0"
                HorizontalAlignment="Stretch"
                Command="{x:Bind ApplyCommand}"
                Content="Применить"
                AutomationProperties.Name="Применить настройки микса"
                AutomationProperties.HelpText="Сохраняет выбранные настройки микса" />
            <Button
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                Command="{x:Bind ResetCommand}"
                Content="Сбросить"
                AutomationProperties.Name="Сбросить настройки микса"
                AutomationProperties.HelpText="Возвращает настройки микса к значениям по умолчанию" />
        </Grid>
    </StackPanel>
</Page>
