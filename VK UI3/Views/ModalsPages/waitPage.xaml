<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="VK_UI3.Views.LoginWindow.waitPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:VK_UI3.Views.LoginWindow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    AutomationProperties.Name="Страница ожидания"
    AutomationProperties.HelpText="Отображается во время выполнения операций в фоновом режиме">
    <Grid
        Margin="50"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="{ThemeResource LayerOnAccentAcrylicFillColorDefaultBrush}"
        CornerRadius="8"
        AutomationProperties.Name="Индикатор выполнения операции"
        AutomationProperties.HelpText="Показывает, что выполняется какая-то операция в фоновом режиме">
        <Grid.Resources>
            <ThemeShadow x:Name="SharedShadow" />
        </Grid.Resources>

        <ProgressRing
            Width="75"
            Height="75"
            Margin="25"
            IsActive="True"
            AutomationProperties.Name="Индикатор прогресса"
            AutomationProperties.HelpText="Отображает выполнение фоновой операции" />


    </Grid>

</Page>
