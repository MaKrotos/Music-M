<Page
	x:Class="VK_UI3.Views.ModalsPages.CreatePlayList"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:VK_UI3.Views.ModalsPages"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Margin="-25"
	CornerRadius="10"
	mc:Ignorable="d"
	AutomationProperties.Name="Страница создания плейлиста"
    AutomationProperties.HelpText="Страница для создания или редактирования плейлиста">
	<Page.Shadow>
		<ThemeShadow />
	</Page.Shadow>

	<Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
		<ScrollView
			x:Name="MainGrid"
			Padding="10,35,10,30"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			CornerRadius="8">


			<StackPanel
				HorizontalAlignment="Center"
				Orientation="Vertical"
				ScrollViewer.VerticalScrollMode="Enabled">
				<Grid
					Width="300"
					Height="300"
					AllowDrop="True"
					Background="{ThemeResource LayerOnAccentAcrylicFillColorDefaultBrush}"
					CornerRadius="10"
					DragOver="Grid_DragOver"
					Drop="PlaylistImage_Drop"
					PointerPressed="PlaylistImage_PointerPressed"
					Translation="0,0,8"
					AutomationProperties.Name="Обложка плейлиста"
			                 AutomationProperties.HelpText="Обложка плейлиста. Нажмите для выбора изображения или перетащите сюда файл">

					<Image
						x:Name="PlaylistImage"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Stretch="UniformToFill"
						AutomationProperties.Name="Изображение обложки плейлиста"
			                     AutomationProperties.HelpText="Текущая обложка плейлиста" />
					<SymbolIcon Symbol="Edit" />
					<Button
						Visibility="Collapsed"
						x:Name="deleteFromAlbum"
						Width="40"
						Height="40"
						Margin="10"
						HorizontalAlignment="Right"
						VerticalAlignment="Top"
						Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
						Click="deleteFromAlbum_Click"
						AutomationProperties.Name="Кнопка удаления обложки"
			                     AutomationProperties.HelpText="Нажмите для удаления текущей обложки плейлиста">
						<FontIcon FontSize="16" Glyph="&#xE74D;" />
					</Button>
				</Grid>
				<TextBox
					x:Name="Title"
					Width="300"
					Margin="0,10,0,0"
					Header="Название"
					MaxLength="1024"
					AutomationProperties.Name="Поле ввода названия плейлиста"
			                 AutomationProperties.HelpText="Введите название для плейлиста" />
				<TextBox
					x:Name="Description"
					Width="300"
					Margin="0,10,0,0"
					AcceptsReturn="True"
					Header="Описание"
					MaxLength="1024"
					TextWrapping="Wrap"
					AutomationProperties.Name="Поле ввода описания плейлиста"
			                 AutomationProperties.HelpText="Введите описание для плейлиста" />


				<TextBlock
					x:Name="GenText"
					Margin="0,10,0,0"
					Visibility="Collapsed"
					AutomationProperties.Name="Текст глубины генерации"
			                 AutomationProperties.HelpText="Глубина генерации плейлиста">
					Глубина генерации
				</TextBlock>
				<Slider
					x:Name="GenValue"
					Margin="0,0,0,0"
					Maximum="100"
					Minimum="1"
					StepFrequency="1"
					Visibility="Collapsed"
					Value="50"
					AutomationProperties.Name="Слайдер глубины генерации"
			                 AutomationProperties.HelpText="Установите глубину генерации плейлиста" />

				<ToggleSwitch
					x:Name="HideFromSearch"
					Margin="0,10,0,0"
					Header="Скрыть из поиска и рекомендаций"
					AutomationProperties.Name="Переключатель скрытия из поиска"
			                 AutomationProperties.HelpText="Включите, чтобы скрыть плейлист из поиска и рекомендаций" />
				<StackPanel
					Margin="0,0,0,0"
					HorizontalAlignment="Right"
					Orientation="Horizontal">
					<Button Margin="5" Click="Button_Click"
						AutomationProperties.Name="Кнопка отмены"
			                     AutomationProperties.HelpText="Нажмите для отмены создания/редактирования плейлиста">Отмена</Button>
					<Button x:Name="SaveBTN" Click="SaveBTN_Click"
						AutomationProperties.Name="Кнопка сохранения"
			                     AutomationProperties.HelpText="Нажмите для сохранения плейлиста">Сохранить</Button>
				</StackPanel>
			</StackPanel>
		</ScrollView>
	</Grid>
</Page>
