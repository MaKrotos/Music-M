<?xml version="1.0" encoding="utf-8" ?>
<UserControl
	x:Class="VK_UI3.Views.Notification.NotifController"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:VK_UI3.Views.Notification"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	DataContextChanged="UserControl_DataContextChanged"
	mc:Ignorable="d">

	<Grid
		Padding="10"
		Background="{ThemeResource LayerOnAccentAcrylicFillColorDefaultBrush}"
		ColumnSpacing="10"
		CornerRadius="10"
		RowSpacing="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />

			<RowDefinition Height="auto" />

			<RowDefinition Height="auto" />

		</Grid.RowDefinitions>

		<TextBlock
			x:Name="HeaderB"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			FontSize="20"
			TextWrapping="Wrap" />
		<TextBlock
			x:Name="TextB"
			Grid.Row="1"
			HorizontalAlignment="Stretch"
			FontSize="14"
			TextWrapping="Wrap"
			Visibility="Collapsed" />
		<Grid
			x:Name="BTNsGrid"
			Grid.Row="2"
			HorizontalAlignment="Stretch"
			ColumnSpacing="5"
			RowSpacing="5" />
		<Button
			Grid.Row="3"
			HorizontalAlignment="Stretch"
			Click="Button_Click">
			Закрыть
		</Button>
	</Grid>
</UserControl>
