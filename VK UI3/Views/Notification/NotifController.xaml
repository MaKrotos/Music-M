<?xml version="1.0" encoding="utf-8" ?>
<UserControl
	x:Class="VK_UI3.Views.Notification.NotifController"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:VK_UI3.Views.Notification"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	DataContextChanged="UserControl_DataContextChanged"
	mc:Ignorable="d">

	<Grid
		x:Name="MainGrid"
		Padding="10"
		Background="{ThemeResource LayerOnAccentAcrylicFillColorDefaultBrush}"
		ColumnSpacing="10"
		CornerRadius="10"
		RowSpacing="0">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />

			<RowDefinition Height="auto" />

			<RowDefinition Height="auto" />
            <RowDefinition Height="auto" />


        </Grid.RowDefinitions>

		<TextBlock
			x:Name="HeaderB"
			Grid.Row="0"
			Margin="0,0,0,10"
			HorizontalAlignment="Stretch"
			FontSize="20"
			TextWrapping="Wrap"
			Visibility="Collapsed" />
		<TextBlock
			x:Name="TextB"
			Grid.Row="1"
			Margin="0,0,0,10"
			HorizontalAlignment="Stretch"
			FontSize="14"
			TextWrapping="Wrap"
			Visibility="Collapsed" />
		<ContentControl
			x:Name="PageContent"
			Grid.Row="2"
			Margin="0,0,0,10"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Visibility="Collapsed" />
		<Grid
			x:Name="BTNsGrid"
			Grid.Row="3"
			Margin="0,0,0,10"
			HorizontalAlignment="Stretch"
			ColumnSpacing="5"
			RowSpacing="5"
			Visibility="Collapsed" />
		<Button
			Grid.Row="4"
			HorizontalAlignment="Stretch"
			Click="Button_Click">
			Закрыть
		</Button>
	</Grid>
</UserControl>
