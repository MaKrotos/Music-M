<?xml version="1.0" encoding="utf-8" ?>
<Page
	x:Class="VK_UI3.Views.SectionView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="using:VK_UI3.Views.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:VK_UI3.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="SectionPage"
	Padding="0"
	mc:Ignorable="d"
	AutomationProperties.Name="Страница раздела"
	AutomationProperties.HelpText="Отображает содержимое выбранного раздела приложения">

	<Page.Resources>
		<local:BlockTemplateSelector x:Key="SectionTemplateSelector" />
	</Page.Resources>

	<ScrollView x:Name="scrollVIew" ViewChanged="scrollVIew_ViewChanged" AutomationProperties.Name="Прокручиваемая область" AutomationProperties.HelpText="Область с прокручиваемым содержимым раздела">
		<ListView
			x:Name="ListBlocks"
			Padding="0,20,0,20"
			ItemTemplateSelector="{StaticResource SectionTemplateSelector}"
			ItemsSource="{x:Bind blocks, Mode=OneWay}"
			SelectionMode="None"
			AutomationProperties.Name="Список блоков"
			AutomationProperties.HelpText="Список блоков содержимого раздела">
			<ListView.Footer>
				<ProgressRing
					x:Name="LoadingIndicator"
					Width="50"
					Height="50"
					Margin="20"
					IsActive="True"
					AutomationProperties.Name="Индикатор загрузки"
					AutomationProperties.HelpText="Показывает процесс загрузки дополнительного содержимого" />
			</ListView.Footer>
		</ListView>
	</ScrollView>
</Page>