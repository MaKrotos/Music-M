<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="VK_UI3.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:VK_UI3.Helpers.Animations"
    xmlns:controlLyryc="using:VK_UI3.Views.ModalsPages"
    xmlns:custom="using:VK_UI3.Controllers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:krotos="using:KrotosNavigationFrame"
    xmlns:local="using:VK_UI3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d"
    AutomationProperties.Name="Главная страница приложения"
    AutomationProperties.HelpText="Основная страница приложения с навигацией и плеером">
    <Page.Resources>
        <ThemeShadow x:Name="SharedShadow" />

        <Storyboard x:Name="ExpandAnimation">
            <DoubleAnimation
                EnableDependentAnimation="True"
                Storyboard.TargetName="LyricPage"
                Storyboard.TargetProperty="Opacity"
                To="1"
                Duration="0:0:0.3" />
        </Storyboard>

        <Storyboard x:Name="CollapseAnimation">
            <DoubleAnimation
                EnableDependentAnimation="True"
                Storyboard.TargetName="LyricPage"
                Storyboard.TargetProperty="Opacity"
                To="0"
                Duration="0:0:0.3" />
        </Storyboard>


        <Storyboard x:Name="ExpandAnimationPlayingList">
            <DoubleAnimation
                EnableDependentAnimation="True"
                Storyboard.TargetName="SectionViewPageNowPlayingList"
                Storyboard.TargetProperty="Opacity"
                To="1"
                Duration="0:0:0.3" />
        </Storyboard>

        <Storyboard x:Name="CollapseAnimationPlayingList">
            <DoubleAnimation
                EnableDependentAnimation="True"
                Storyboard.TargetName="SectionViewPageNowPlayingList"
                Storyboard.TargetProperty="Opacity"
                To="0"
                Duration="0:0:0.3" />
        </Storyboard>

    </Page.Resources>


    <Grid AutomationProperties.Name="Основная сетка приложения" AutomationProperties.HelpText="Основная область компоновки приложения">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AutomationProperties.Name="Область навигации"
            AutomationProperties.HelpText="Основная область навигации приложения">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>

            <NavigationView
                Name="NavWiv"
                Grid.RowSpan="2"
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch"
                IsBackButtonVisible="Collapsed"
                IsBackEnabled="False"
                IsPaneOpen="False"
                IsSettingsVisible="True"
                ItemInvoked="NavWiv_ItemInvoked"
                PaneDisplayMode="Auto"
                AutomationProperties.Name="Навигационное меню"
                AutomationProperties.HelpText="Основное меню навигации приложения">

                <NavigationView.MenuItems>
                    <NavigationViewItem Content="Моя музыка" AutomationProperties.Name="Моя музыка" AutomationProperties.HelpText="Перейти к моей музыке">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xEC4F;" AutomationProperties.Name="Иконка музыки" AutomationProperties.HelpText="Иконка раздела музыки" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>


                    <NavigationViewItem Content="Мои плейлисты" AutomationProperties.Name="Мои плейлисты" AutomationProperties.HelpText="Перейти к моим плейлистам">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE93C;" AutomationProperties.Name="Иконка плейлиста" AutomationProperties.HelpText="Иконка раздела плейлистов" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem Content="Плейлисты" AutomationProperties.Name="Плейлисты" AutomationProperties.HelpText="Перейти к плейлистам">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xEB51;" AutomationProperties.Name="Иконка плейлиста" AutomationProperties.HelpText="Иконка раздела плейлистов" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem Content="Музыка друзей" AutomationProperties.Name="Музыка друзей" AutomationProperties.HelpText="Перейти к музыке друзей">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE716;" AutomationProperties.Name="Иконка друзей" AutomationProperties.HelpText="Иконка раздела друзей" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem Content="Вложения" AutomationProperties.Name="Вложения" AutomationProperties.HelpText="Перейти к вложениям">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE8F2;" AutomationProperties.Name="Иконка вложений" AutomationProperties.HelpText="Иконка раздела вложений" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem Content="Для Вас" AutomationProperties.Name="Для Вас" AutomationProperties.HelpText="Перейти к рекомендациям">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xEC32;" AutomationProperties.Name="Иконка рекомендаций" AutomationProperties.HelpText="Иконка раздела рекомендаций" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItemSeparator />
                    <NavigationViewItemHeader />

                </NavigationView.MenuItems>
                <Grid
                    x:Name="MainGridLir"
                    Margin="0"
                    PointerEntered="ListViewItem_PointerEntered"
                    AutomationProperties.Name="Основная область содержимого"
                    AutomationProperties.HelpText="Основная область отображения содержимого приложения">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <animations:AnimatedSearch
                        x:Name="Search"
                        Grid.Row="0"
                        Height="0"
                        Margin="0"
                        OriginalHeight="50"
                        AutomationProperties.Name="Панель поиска"
                        AutomationProperties.HelpText="Панель для поиска музыки и контента" />
                    <krotos:NavigateFrame x:Name="ContentFrame" Grid.Row="1" AutomationProperties.Name="Фрейм содержимого" AutomationProperties.HelpText="Область отображения основного содержимого" />
                </Grid>
            </NavigationView>
            <controlLyryc:LyricsPage
                x:Name="LyricPage"
                Grid.Row="3"
                VerticalAlignment="Stretch"
                Background="{ThemeResource SystemControlAltHighAcrylicElementBrush}"
                Opacity="0"
                Visibility="Collapsed"
                AutomationProperties.Name="Страница текстов песен"
                AutomationProperties.HelpText="Отображает тексты песен для текущего трека" />
            <controlLyryc:EqualizerControl
                x:Name="EqualizerControlPage"
                Grid.Row="3"
                VerticalAlignment="Stretch"
                Background="{ThemeResource SystemControlAltHighAcrylicElementBrush}"
                Opacity="0"
                Visibility="Collapsed"
                AutomationProperties.Name="Эквалайзер"
                AutomationProperties.HelpText="Настройка звуковых параметров воспроизведения" />
            <Frame
                x:Name="SectionViewPageNowPlayingList"
                Grid.Row="3"
                VerticalAlignment="Stretch"
                Background="{ThemeResource SystemControlAltHighAcrylicElementBrush}"
                Opacity="0"
                Visibility="Collapsed"
                AutomationProperties.Name="Список воспроизведения"
                AutomationProperties.HelpText="Отображает список треков в текущем плейлисте" />
        </Grid>
        <Frame
            Grid.Row="1"
            VerticalAlignment="Bottom"
            BorderThickness="0,1,0,0"
            AutomationProperties.Name="Плеер"
            AutomationProperties.HelpText="Основной музыкальный плеер приложения">
            <custom:AudioPlayer Margin="0,0,0,0" AutomationProperties.Name="Аудио плеер" AutomationProperties.HelpText="Компонент управления воспроизведением музыки" />
        </Frame>
    </Grid>
</Page>
